class Solution {
public:
    int lengthOfLastWord(string s) {
        
        int ans = 0;
        int ans1 = 0;
        for(int i=0; i<s.length(); i++) {
            if(s[i] == 32)
                ans = 0;
            else { 
                ans++;
                ans1 = ans;
            }
        }
        
        return ans1;
        
    }
};
