class Solution {
public:
    int longestCycle(vector<int>& edges) {

        int time = 1;
        int ans = -1;

        vector<int> timeVisited(edges.size());

        for(int i=0; i<edges.size(); i++) {

            if(timeVisited[i]) continue;

            const int s = time;
            int u = i;

            while(u != -1 && !timeVisited[u]) {
                timeVisited[u] = time++;
                u = edges[u];
            }

            if(u != -1 && timeVisited[u] >= s) 
                ans = max(ans, time - timeVisited[u]);

        }

        return ans;
        
    }
};
